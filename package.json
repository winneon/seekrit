{
  "name": "seekrit",
  "description": "An end-to-end encrypted file host, inspired by Firefox Send.",
  "author": "Jesse Bryan <jesse@winneon.moe>",
  "version": "0.1.0",
  "license": "MIT",
  "repository": "winneon/seekrit",
  "bin": {
    "seekrit": "lib/bin/seekrit.js"
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "rules": {
      "object-curly-spacing": 0,
      "array-bracket-spacing": 0
    }
  },
  "ava": {
    "files": [
      "test/**/*.js"
    ],
    "failWithoutAssertions": false,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "exclude": [
      "lib/**/*",
      "test/**/*"
    ]
  },
  "pkg": {
    "assets": [
      ".next",
      "pages"
    ],
    "scripts": [
      ".next/dist/**/*.js"
    ],
    "targets": [
      "latest-linux-x64",
      "latest-macos-x64",
      "latest-win-x64"
    ]
  },
  "scripts": {
    "dev": "babel-node app/dev.js",
    "build": "next build && cross-env BABEL_ENV=production babel app/* bin/* -d lib",
    "predist": "npm run build",
    "dist": "pkg . --out-dir dist",
    "prestart": "npm run build",
    "start": "node lib/bin/seekrit",
    "pretest": "npm run build",
    "test": "xo && cross-env NODE_ENV=production nyc ava --verbose"
  },
  "dependencies": {
    "minimist": "^1.2.0",
    "next": "^3.2.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.5",
    "nyc": "^11.1.0",
    "pkg": "^4.2.4",
    "xo": "^0.18.2"
  }
}
